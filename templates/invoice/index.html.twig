{% extends 'base.html.twig' %}

{% block title %}Invoice{% endblock %}
{% import 'base.html.twig' as macros %}
{% block body %}

<section class="content">
    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col-8">
                <!-- form elements -->
                <div class="card">
                 <div class="card-header">
                 <h1 class="text-center">Form Invoice</h1>
                 </div>
                 <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="form-group col-12 col-sm-12 col-md-4">
                                {{ form_label(form.number) }}
                                {{ form_widget(form.number) }}
                                {{ form_errors(form.number) }}
                            </div>
                            <div class="form-group col-12 col-sm-12 col-md-4 date"  data-provide="datepicker">
                            
                                    {{ form_label(form.date) }}      
                                    {{ form_widget(form.date )}}
                                    {{ form_errors(form.date) }}
                                <i class="fas fa-calendar input-prefix"></i>
                            </div>
                            <div class="form-group col-12 col-sm-12 col-md-4">
                                {{ form_label(form.customerId) }}
                                {{ form_widget(form.customerId) }}
                                {{ form_errors(form.customerId) }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                                <div class="card-header d-flex">
                                        <h5 class="mr-3">Lines</h5>
                                        <button type="button" class="add_item_link btn btn-sm btn-form btn-primary"
                                                data-collection-holder-class="invoice">
                                            <i class="fas fa-plus-circle"></i>Add new line
                                        </button>
                                </div>
                            <ul class="invoice"
                                data-prototype="{{ macros.newLine(form.invoiceLines.vars.prototype)|e('html_attr') }}">
                                {% for invoiceLinesField in form.invoiceLines %}

                                        <li>
                                        {{ macros.newLine(invoiceLinesField) }}
                                        </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="form-group col-12 text-center">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                        </div>
                    {{ form_end(form) }}
                </div>
    		</div>
        </div>
    </div>
</section>
{% endblock %}

{% block script %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
    <script>
        $(document).ready(function() {
            // you may need to change this code if you are not using Bootstrap Datepicker
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
    </script>
{% endblock %}
     
